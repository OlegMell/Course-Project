<UserControl x:Class="Course_Project_Gym.NewsUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Course_Project_Gym"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="350">
    <Grid>
        <Rectangle x:Name="FormForImg" Margin="10" VerticalAlignment="Top" Height="200" RadiusX="15" RadiusY="15" >
            <Rectangle.Fill>
                <ImageBrush x:Name="ImgNews"/>
            </Rectangle.Fill>
        </Rectangle>
        <StackPanel Margin="0,215,0,0" >
            <TextBlock x:Name="NewsName" FontSize="25" Margin="10" FontWeight="DemiBold" VerticalAlignment="Bottom" Height="50"/>
        </StackPanel>
    </Grid>
</UserControl>
