<Window x:Class="Course_Project_Gym.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Course_Project_Gym"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <Grid.RowDefinitions> 
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" Height="50" Text="Login" FontSize="30" FontWeight="DemiBold" TextAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Height="40" FontSize="15" FontWeight="DemiBold"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Height="50" Text="Password" FontSize="30" FontWeight="DemiBold" TextAlignment="Center"/>
        <PasswordBox Grid.Row="3" Grid.Column="1" Height="40" FontSize="15" FontWeight="DemiBold" HorizontalContentAlignment="Center"/>
        <Button Grid.Row="4" Grid.Column="1" Content="Enter" Height="40" Width="100"/>
    </Grid>
</Window>
