<UserControl x:Class="Course_Project_Gym.TaskUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Course_Project_Gym"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="350">
    <Grid x:Name="MainGrid" Opacity="0.8">
        <StackPanel>
            <TextBlock x:Name="TaskTitle" FontSize="22" FontWeight="DemiBold" Height="40" Margin="10"/>
            <TextBlock x:Name="TaskText" FontSize="18" Height="40" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
